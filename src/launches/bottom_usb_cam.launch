<launch>
        <arg name="camera" default="bottom_usb_cam" />

    <node name="uvc_camera" pkg="uvc_camera" type="uvc_camera_node" output="screen" ns="bottom_camera/camera">

        <param name="device" value="/dev/lifecam2" />
        <param name="width" value="320" />
        <param name="height" value="240" />
        <param name="fps" value="30" />
        <param name="topic" type="string" value="image_raw" />
    </node>

</launch>

